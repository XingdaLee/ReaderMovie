<view>
  <swiper indicator-dots='true' autoplay='true'>
    <swiper-item>
      <image src="/images/swiper/swiper1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/swiper/swiper2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/swiper/swiper3.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/swiper/swiper4.jpg"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{post_contentList}}" wx:key="index" wx:for-item="list">
    <view class="post-container">
      <view class="post-author-date">
        <image wx:if="{{list.isShowAuthor}}" class="post-author" src="{{list.author_image}}"></image>
        <text class="post-date">{{list.date}}</text>
      </view>
      <text class="post-title">{{index + 1 + "、"}}{{list.title}}</text>
      <image class="post-image" src="{{list.post_image}}"></image>
      <text class="post-content">{{list.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="../../images/icon/chat.png"></image>
        <text class="post-like-font">{{list.collect_num}}</text>
        <image class="post-like-image" src="/images/icon/praise.png"></image>
        <text class="post-like-font">{{list.view_num}}</text>
      </view>
    </view>
  </block>
</view>